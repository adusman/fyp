<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:background="@drawable/custom_btn_white"
    android:keepScreenOn="true">

        <TextView
            android:id="@+id/alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tahoma_bold"
            android:text="Are you sure want to quit?"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/dialog_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alert_message">

            <TextView
                android:id="@+id/button_cancel"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:background="@drawable/custom_btn_empty"
                android:fontFamily="@font/tahoma_regular"
                android:gravity="center"
                android:text="No"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/ic_rate_us"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:background="@drawable/custom_btn_fill"
                android:fontFamily="@font/tahoma_regular"
                android:gravity="center"
                android:text="Rate Us"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/button_ok"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:background="@drawable/custom_btn_empty"
                android:fontFamily="@font/tahoma_regular"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@android:color/black" />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>